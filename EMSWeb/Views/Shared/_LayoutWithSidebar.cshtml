
<!DOCTYPE html>
<html lang="en">
@{ 

}
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>EMAS UK</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Themesdesign" name="author" />
    <!-- favicon -->
    <link rel="shortcut icon" href="../images/favicon.ico">
    <script src="~/HTML/dashboard/assets/js/jquery.min.js"></script>
    <script src="~/HTML/dashboard/assets/js/jquery.nanoscroller.min.js"></script>
    <!-- Styles -->
    <link href="~/css/assets/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/assets/css/style.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <link href="https://cdn.datatables.net/1.10.23/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/css/rounded.css" />
    <script src="~/js/daypilot-modal.min-3.10.1.js"></script>
    <style>
        .rsLanuages li {
            border-bottom: 1px solid #b8d9eb;
        }

            .rsLanuages li:nth-child(odd) {
                border-bottom: 1px solid #b8d9eb;
            }

            .rsLanuages li:active {
                background-color: gainsboro;
            }

            .rsLanuages li:hover {
                background-color: gainsboro;
            }

        .delete {
            display: none;
        }

        .settings {
            display: none;
        }
    </style>
    @RenderSection("Scripts", false)
</head>

<body>

    <div class="sidebar sidebar-hide-to-small sidebar-shrink sidebar-gestures">
        <div class="nano">
            <div class="nano-content">
                <ul class="mt-3">
                    @if (@*ViewBag.PermAdmin  ==*@ /**/
                                                                         /**/
                                                                         true)
                                {
                                    <li>
                                        <a class="sidebar-sub-toggle"><i class="fa fa-folder-open-o"> </i>Resource Library<i class="fa fa-chevron-down sidebar-collapse-icon"></i></a>
                                        <ul>
                                            <li class="active" style=" min-height:30px; max-height:300px; overflow: auto">
                                                <a class="sidebar-sub-toggle"><i class="fa fa-language"></i>Resources by Language@*<i class="fa fa-chevron-down sidebar-collapse-icon"></i>*@</a>
                                                <ul class="rsLanuages">
                                                    @foreach (var x in ViewBag.MenuLanguages)
                                                    {
                                                        <li><a id="@x.Id" class="lngClick">@x.Name</a></li>
                                                    }

                                                </ul>
                                            </li>
                                            <li style=" min-height:30px; max-height:300px; overflow: auto">
                                                <a class="sidebar-sub-toggle"><i class="fa fa-book"></i>Resources by Subject@*<i class="fa fa-chevron-down sidebar-collapse-icon"></i>*@</a>
                                                <ul class="rsLanuages">
                                                    @foreach (var x in ViewBag.MenuSubjects)
                                                    {
                                                        <li><a id="@x.Id" class="subClick">@x.Name</a></li>
                                                    }
                                                </ul>
                                            </li>
                                            <li style=" min-height:30px; max-height:300px; overflow: auto">
                                                <a class="sidebar-sub-toggle"><i class="fa fa-globe"></i>Knowledge Share by Country@*<i class="fa fa-chevron-down sidebar-collapse-icon"></i>*@</a>
                                                <ul class="rsLanuages">
                                                    @foreach (var x in ViewBag.MenuKnowledgeSharebyCountry)
                                                    {
                                                        <li><a id="@x.Id" class="kngClick">@x.Name</a></li>
                                                    }

                                                </ul>
                                            </li>
                                            <li><a href="#" class="tchClick_sb"><i class="fa fa-question-circle-o"></i>Teacher's Support Documents</a></li>
                                        </ul>
                                    </li>

                                }

                    @if (ViewBag.PermAdmin == true)
                    {
                        <li class="@((ViewBag.Page == "UserManagement")? "active" : "")">
                            <a href="@Url.ActionLink("Index", "UserManagement")"><i class="fa fa-language"></i>User Management</a>
                        </li>
                    }

                    @if (ViewBag.PermTextTutor == true)
                    {
                        <li class="@((ViewBag.Page == "TextTutor")? "active" : "")"><a href="@Url.ActionLink("Index", "TextTutor")"><i class="fa fa-file-text-o"></i> Text Tutor </a></li>
                    }
                    @if (ViewBag.PermTalkingTutor == true)
                    {
                        <li class="@((ViewBag.Page == "TalkTutor") ? "active" : "")"><a href="@Url.ActionLink("Index", "TalkTutor")"><i class="fa fa-commenting-o"></i>  Talking Tutor </a></li>
                    }
                    @if (ViewBag.PermTwoCanTalk == true)
                    {
                        <li class="@((ViewBag.Page == "TwoCanTalk") ? "active" : "")"><a href="@Url.ActionLink("Index", "TwoCanTalk")"><i class="fa fa-comments-o"></i> Twocan Talk </a></li>
                    }

                    @if (ViewBag.PhraseBookManager == true)
                    {
                        <li class="@((ViewBag.Page == "PhrasebookManager") ? "active" : "")"><a href="@Url.ActionLink("Index", "PhrasebookManager")"><i class="fa fa-address-book-o"></i> Phrasebook Manager</a></li>
                    }
                    <li><a href="@Url.ActionLink("Index","Index")"><i class="fa fa-sign-out"></i> Logout</a></li>
                    </ul>
            </div>
        </div>
    </div>
    <!-- /# sidebar -->

    <div class="header">
        <div class="pull-left">
            <div class="logo"><a href="#"> <img src="../images/logo.png" height="40" alt="" /></a></div>
            <div class="hamburger sidebar-toggle">
                <span class="line"></span>
                <span class="line"></span>
                <span class="line"></span>
            </div>
        </div>
    </div>
    <div class="content-wrap">
        @RenderBody()
    </div>

    <!--End-->
    <script src="~/js/assets/js/sidebar.js"></script>
    <script src="~/js/assets/js/bootstrap.min.js"></script>
    <script src="~/js/assets/js/scripts.js"></script>
    <script src="https://cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();

            $(".lngClick").click(function () {
                var id = $(this).attr("id");
                window.location = '/ResourcesLib/ByLanguage/' + id;
            });

            //subjects
            $(".subClick").click(function () {
                var id = $(this).attr("id");
                window.location = '/ResourcesLib/BySubject/' + id;
            });
            //Knowledge shared
            $(".kngClick").click(function () {
                var id = $(this).attr("id");
                window.location = '/ResourcesLib/ByKnowledgeShared/' + id;
            });
            //Teachers support doc
            $(".tchClick_sb").click(function () {
                var id = $(this).attr("id");
                window.location = '/ResourcesLib/ByTeacherDoc/' + id;
            });

        });</script>
</body>

</html>


