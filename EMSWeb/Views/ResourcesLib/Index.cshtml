@model EMSWeb.Models.Resources
@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>EMAS UK</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Themesdesign" name="author" />
    <!-- favicon -->
    <link rel="shortcut icon" href="../images/favicon.ico">
    <!-- Styles -->
    <link href="~/css/assets/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/assets/css/style.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/1.10.23/css/jquery.dataTables.min.css" rel="stylesheet" />
    <style>
        .rsLanuages li {
            border-bottom: 1px solid #b8d9eb;
        }

            .rsLanuages li:nth-child(odd) {
                border-bottom:1px solid #b8d9eb;
            }
        .rsLanuages li:active {
            background-color:gainsboro;
        }
            .rsLanuages li:hover {
                background-color: gainsboro;
            }
            .delete{display:none;}
        .settings{display:none;}
    </style>
</head>

<body>

    <div class="sidebar sidebar-hide-to-small sidebar-shrink sidebar-gestures">
        <div class="nano">
            <div class="nano-content">
                <ul class="mt-3">

                    <li>
                        <a class="sidebar-sub-toggle"><i class="fa fa-folder-open-o"> </i>Resourcees Library<i class="fa fa-chevron-down sidebar-collapse-icon"></i></a>
                        <ul>
                            <li class="active" style=" min-height:30px; max-height:300px; overflow: auto">
                                <a class="sidebar-sub-toggle"><i class="fa fa-language"></i>Resources by Language@*<i class="fa fa-chevron-down sidebar-collapse-icon"></i>*@</a>
                                <ul class="rsLanuages">
                                    @foreach (var x in Model.Languages)
                                    {
                                        <li><a id="@x.Id" class="lngClick">@x.Name</a></li>
                                    }

                                </ul>
                            </li>
                            <li style=" min-height:30px; max-height:300px; overflow: auto">
                                <a class="sidebar-sub-toggle"><i class="fa fa-book"></i>Resources by Subject@*<i class="fa fa-chevron-down sidebar-collapse-icon">*@</i></a>
                                <ul class="rsLanuages">
                                    @foreach (var x in Model.Subjects)
                                    {
                                        <li><a id="@x.Id" class="subClick">@x.Name</a></li>
                                    }

                                </ul>
                            </li>
                            <li style=" min-height:30px; max-height:300px; overflow: auto">
                                <a class="sidebar-sub-toggle"><i class="fa fa-globe"></i>Knowledge Share by Country@*<i class="fa fa-chevron-down sidebar-collapse-icon"></i>*@</a>
                                <ul class="rsLanuages">
                                    @foreach (var x in Model.KnowledgeSharebyCountry)
                                    {
                                        <li><a id="@x.Id" class="kngClick">@x.Name</a></li>
                                    }

                                </ul>
                            </li>
                            <li><a href="#" class="tchClick"><i class="fa fa-question-circle-o"></i>Teacher's Support Documents</a></li>
                        </ul>
                    </li>
                    <li class="@((ViewBag.Page == "UserManagement")? "active" : "")">
                        <a href="@Url.ActionLink("Index", "UserManagement")"><i class="fa fa-language"></i>User Management</a>
                    </li>
                    <li class="@((ViewBag.Page == "TextTutor")? "active" : "")"><a href="@Url.ActionLink("Index", "TextTutor")"><i class="fa fa-file-text-o"></i> Text Tutor </a></li>
                    <li class="@((ViewBag.Page == "TalkTutor")? "active" : "")"><a href="@Url.ActionLink("Index", "TalkTutor")"><i class="fa fa-commenting-o"></i>  Talking Tutor </a></li>
                    <li class="@((ViewBag.Page == "TwoCanTalk")? "active" : "")"><a href="@Url.ActionLink("Index", "TwoCanTalk")"><i class="fa fa-comments-o"></i> Twocan Talk </a></li>
                    <li><a href="@Url.ActionLink("Index", "TwoCanTalk")"><i class="fa fa-address-book-o"></i> Phrasebook Manager</a></li>
                    <li><a href="@Url.ActionLink("Index","Index")"><i class="fa fa-sign-out"></i> Logout</a></li>
                </ul>
            </div>
        </div>
    </div>
    <!-- /# sidebar -->

    <div class="header">
        <div class="pull-left">
            <div class="logo"><a href="#"> <img src="../images/logo.png" height="40" alt="" /></a></div>
            <div class="hamburger sidebar-toggle">
                <span class="line"></span>
                <span class="line"></span>
                <span class="line"></span>
            </div>
        </div>
    </div>
    <div class="content-wrap">
        <div class="main" id="main_msg">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12 p-r-0 title-margin-right">
                        <div class="page-header">
                            <div class="page-title">
                                <h1>Welcome to <span>Emas UK</span></h1>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="main-content">
                    <div class="row logo-content">
                        <div class="col-lg-12">
                            <img src="../images/logo.png" />
                        </div>
                    </div>
                    <div class="row  footer-content">
                        <div class="col-lg-4">
                            <img src="~/images/footer1.jpg">
                        </div>
                        <div class="col-lg-4">
                            <img src="~/images/footer2.jpg">
                        </div>
                        <div class="col-lg-4">
                            <img src="~/images/footer3.jpg">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="main" id="main_res" style="display:none">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-9 p-r-0 title-margin-right">
                        <div class="page-header">
                            <div class="page-title">
                                <h1>Resourcees <span>Library</span></h1>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <a href="/ResourcesLib/Add" class="btn btn-primary" id="AddResource">Add New Resource</a>
                    </div>
                </div>

                <div id="main-content">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card alert">
                                <div>
                                    <!--<div class="addResourceBtn">
                                  <a href="#"><i class="fa fa-plus pr-2"></i><span>Add new ressource</span></a>
                                </div> -->
                                    <div class="table-responsive">
                                        <table class="table table-striped table-bordered" id="tblLangList">
                                            <thead>
                                                <tr>
                                                    <th>File</th>
                                                    <th>Subjects</th>
                                                    <th>Language</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>

                                        </table>
                                        <div class="clearfix" style="display:none">
                                            <div class="hint-text">Showing <b>5</b> out of <b>25</b> entries</div>
                                            <ul class="pagination">
                                                <li class="page-item disabled"><a href="#">Previous</a></li>
                                                <li class="page-item"><a href="#" class="page-link">1</a></li>
                                                <li class="page-item"><a href="#" class="page-link">2</a></li>
                                                <li class="page-item active"><a href="#" class="page-link">3</a></li>
                                                <li class="page-item"><a href="#" class="page-link">4</a></li>
                                                <li class="page-item"><a href="#" class="page-link">5</a></li>
                                                <li class="page-item"><a href="#" class="page-link">Next</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /# card -->
                        </div>
                        <!-- /# column -->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Add new popup-->

    <div class="modal fade" id="modalAddNew" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <<div class="row">
    <div class="col-sm-10"> <h4 class="modal-title" id="myModalLabel">Add New Record</h4></div>
    <div class="col-sm-2">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    </div>
   

</div>
                
                @using (Html.BeginForm("AddNew", "ResourcesLib", FormMethod.Post, new { id = "form", enctype = "multipart/form-data" }))
                {
            <div class="modal-body">
                <div class="row">
                    Enter Name : <input type="text" id="txtName" /> <br />
                    Upload Photo : <input type="file" id="photo" name="photo" /><br />
                    <input type="submit" value="Submit" id="btnSubmit" />
                </div>
                </div>
                }
            </div>
        </div>
    </div>
   
    <div class="modal fade" id="myModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Notification</h4>
                </div>
                <div class="modal-body">
                    Are you sure you want to continue?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <!--End-->
    <script src="~/js/assets/js/jquery.min.js"></script>
    <script src="~/js/assets/js/jquery.nanoscroller.min.js"></script>
    <script src="~/js/assets/js/sidebar.js"></script>
    <script src="~/js/assets/js/bootstrap.min.js"></script>
    <script src="~/js/assets/js/scripts.js"></script>
    <script src="https://cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js"></script>

    <script>
        function deleteRes(id) {
            alert(id);
        }
        function initLinks(nTd, sData, oData, iRow, iCol) {
            console.log(nTd, sData, oData, iRow, iCol);
            $(nTd).html('\
                <a href="/ResourcesLib/Edit/' + oData.id + '" class="settings" title="" data-toggle="tooltip" data-original-title="Settings"><i class="fa fa-edit"></i></a>\
                    <a href="/ResourcesLib/Delete?id=' + oData.id + '" class= "delete title="" data-toggle="tooltip" data-original-title="Delete" >\
                    <i class="fa fa-trash-o"></i></a><a href="/ResourcesLib/downloadFile?filePath=files_knowledge-share&fileName=' + encodeURI(oData.filename) + '"  class= "delete" title="" data-toggle="tooltip" data-original-title="Delete"><i class="fa fa-download" aria-hidden="true"></i></a>');
        }
        

        function initLinksresources(nTd, sData, oData, iRow, iCol) {
            console.log(nTd, sData, oData, iRow, iCol);
            $(nTd).html('\
                <a href="/ResourcesLib/Edit/' + oData.id + '" class="settings" title="" data-toggle="tooltip" data-original-title="Settings"><i class="fa fa-edit"></i></a>\
                    <a href="/ResourcesLib/Delete?id=' + oData.id + '" class= "delete title="" data-toggle="tooltip" data-original-title="Delete" >\
                    <i class="fa fa-trash-o"></i></a><a href="/ResourcesLib/downloadFile?filePath=files_resources&fileName=' + encodeURI(oData.filename) + '"   class= "delete" title="" data-toggle="tooltip" data-original-title="Delete"><i class="fa fa-download" aria-hidden="true"></i></a>');
        }


        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();

            $(".lngClick").click(function () {
                $("#main_res").css("display", "block");
                $("#main_msg").css("display", "none");
                var id = $(this).attr("id");
                if ($.fn.DataTable.isDataTable('#tblLangList')) {
                    $('#tblLangList').DataTable().destroy();
                }
                $('#tblLangList').DataTable(
                    {
                        "bDestroy": true,
                        "ajax": '/ResourcesLib/GetLanguagesById/' + id,
                        columns: [
                            {
                                "data": "filename", "name": "filename",
                                fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
                                    $(nTd).html("<i class='fa fa-file-pdf-o pdfTableIcon'></i><a  href='/ResourcesLib/downloadFile?filePath=files_resources&fileName="  + encodeURI(oData.filename) + "' >" + oData.filename + "</a>");
                      }
                            },
                            {
                                "data": "subjects",
                                fnCreatedCell: 
                            },
                            {
                                "data": "language"
                            },
                            {
                                "data": "mime_type", "name": "mime_type",
                                fnCreatedCell: initLinksresources
                            }
                        ]
                    });

            });

            //subjects
            $(".subClick").click(function () {
                $("#main_res").css("display", "block");
                $("#main_msg").css("display", "none");

                var id = $(this).attr("id");
                //$(this).css("background-color", "#b8d9eb");
                if ($.fn.DataTable.isDataTable('#tblLangList')) {
                    $('#tblLangList').DataTable().destroy();
                }
                $('#tblLangList').DataTable(
                    {
                        "bDestroy": true,
                        "ajax": '/ResourcesLib/GetSubjectssById/' + id,
                        columns: [
                            {
                                "data": "filename", "name": "filename",
                                fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
                                    $(nTd).html("<i class='fa fa-file-pdf-o pdfTableIcon'></i><a  href='/ResourcesLib/downloadFile?filePath=files_resources&fileName=" + oData.filename + "' >" + oData.filename + "</a>");
                        }
                            },
                            {
                                "data": "subjects"
                            },
                            {
                                "data": "language"
                            },
                            {
                                "data": "mime_type", "name": "mime_type",
                                fnCreatedCell: initLinksresources
                            }
                        ]
                    });

            });
            //Knowledge shared
            $(".kngClick").click(function () {
                $("#main_res").css("display", "block");
                $("#main_msg").css("display", "none");

                var id = $(this).attr("id");
                if ($.fn.DataTable.isDataTable('#tblLangList')) {
                    $('#tblLangList').DataTable().destroy();
                }
                $('#tblLangList').DataTable(
                    {
                        "bDestroy": true,
                        "ajax": '/ResourcesLib/GetKnowledgeSharedById/' + id,
                        columns: [
                            {
                                "data": "filename", "name": "filename",
                                fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
                                    $(nTd).html("<i class='fa fa-file-pdf-o pdfTableIcon'></i><a  href='/ResourcesLib/downloadFile?filePath=files_knowledge-share&fileName=" + oData.filename + "' " + oData.filename + "</a>");
                               }
                            },
                            {
                                "data": "subjects"
                            },
                            {
                                "data": "language"
                            },
                            {
                                "data": "mime_type", "name": "mime_type",
                                fnCreatedCell: initLinks
                            }
                        ]
                    });

            });
            //Teachers support doc
            $(".tchClick").click(function () {
                $("#main_res").css("display", "block");
                $("#main_ms").css("display", "none");

                var id = $(this).attr("id");
                if ($.fn.DataTable.isDataTable('#tblLangList')) {
                    $('#tblLangList').DataTable().destroy();
                }
                $('#tblLangList').DataTable(
                    {
                        "bDestroy": true,
                        "ajax": '/ResourcesLib/GetTeachersDocById/' + id,
                        columns: [
                            {
                                "data": "filename", "name": "filename",
                                fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
                                    $(nTd).html("<i class='fa fa-file-pdf-o pdfTableIcon'></i><a  href='../files/teachers-support-documents/" + oData.filename + "' Target='_blank'>" + oData.filename + "</a>");
                                }
                            },
                            {
                                "data": "subjects"
                            },
                            {
                                "data": "language"
                            },
                            {
                                "data": "mime_type", "name": "mime_type",
                                fnCreatedCell: initLinks
                            }
                        ]
                    });

            });
           

            $("#btnSubmit").click(function () {
                var frmData = new FormData();
                var filebase = $("#photo").get(0);
                var files = filebase.files;
                frmData.append("firstname", "hi");
                frmData.append(files[0].name, files[0]);
                $.ajax({
                    url: '/ResourcesLib/AddNew',
                    type: "POST",
                    contentType: false,
                    processData: false,
                    data: frmData,
                    success: function (data) {
                        $('#myModal').modal('show');
                        $('#txtMessage').html(data.message);
                        if (data.success) {
                            $('.modal-header').addClass('alert alert-success');
                        } else {
                            $('.modal-header').addClass('alert alert-info');
                        }
                    },
                    error: function (err) {
                        $('#myModal').modal('show');
                        $('.modal-header').addClass('alert alert-danger');
                        $('#txtMessage').html(err.statusText);
                    }
                });
            });
        });</script>

</body>

</html>

