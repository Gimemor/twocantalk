@{
    Layout = "_LayoutWithSidebar";
}
@section scripts {
    <link href="~/HTML/css/twocantalk.css" rel="stylesheet">
}
@model ResourceModel
<form asp-action="Edit" enctype="multipart/form-data" asp-controller="ResourcesLib" method="post">
    <div class="container-fluid">
        <div class="row p-8 d-flex flex-row user-managment-header">
            <div class="p-8">
                <h5>Resource Management</h5>
            </div>
            <div class="p-8">
                <button type="submit" class="btn btn-primary">Submit</button>
                <a href="/ResourcesLib" id="#backBtn" class="btn btn-light">Back</a>
            </div>
        </div>
        <div class="row user-managment-header">
            <div class="col-3">@Html.ValidationSummary(false)</div>
        </div>

        <div class="card alert">
            <div class="form-group row">
                <label class="col-lg-3 col-form-label">File Name </label>
                <div class="col-lg-9">
                    @Html.TextBoxFor(x => x.Filename, new { Class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-lg-3 col-form-label"> @Html.LabelFor(x => x.Language)</label>
                <div class="col-lg-9">
                    @Html.DropDownListFor(x => x.Language, ViewBag.Languages as IEnumerable<SelectListItem>, "Language", new { Class = "form-control" })
                </div>
            </div>
            <div class=" form-group row">
                <label class="col-lg-3 col-form-label"> @Html.LabelFor(x => x.MimeType)</label>
                <div class="col-lg-9">
                    @Html.TextBoxFor(x => x.MimeType, new { Class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-lg-3 col-form-label">Subject 1</label>
                <div class="col-lg-9">
                    @Html.DropDownListFor(x => x.Subject1, ViewBag.Subjects as IEnumerable<SelectListItem>, "Subject 1", new { Class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-lg-3 col-form-label">Subject 2</label>
                <div class="col-lg-9">
                    @Html.DropDownListFor(x => x.Subject2, ViewBag.Subjects as IEnumerable<SelectListItem>, "Subject 2", new { Class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                    <label class="col-lg-3 col-form-label">Subject 3</label>
                    <div class="col-lg-9">
                        @Html.DropDownListFor(x => x.Subject3, ViewBag.Subjects as IEnumerable<SelectListItem>, "Subject 3", new { Class = "form-control" })
                    </div>
            </div>
            <div class="form-group row">
                <div class="col-md-12">
                    <dl>
                        <dt>
                            <label asp-for="FormFile"></label>
                        </dt>
                        <dd>
                            <input asp-for="FormFile" type="file" class="form-control">
                            <span asp-validation-for="FormFile"></span>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</form>
