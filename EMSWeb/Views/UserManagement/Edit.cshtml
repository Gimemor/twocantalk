@{
    Layout = "_LayoutWithSidebar";
}
@model User
@section scripts {
    <link href="~/HTML/css/twocantalk.css" rel="stylesheet">
}
<div class="row">
    <div class="col-lg-12">
        <div class="card alert">
            <div>
                <div class="form-validation">
                    <form asp-action="Save" asp-controller="UserManagement" class="form-valide row" method="post">
                        @Html.HiddenFor(x => x.Id)
                        <div class="col-lg-6">
                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label">Active </label>
                                <div class="col-lg-9">
                                        @Html.CheckBoxFor(x => x.Active, new { Class="css-control-attribute"})
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label" for="val-username">Username </label>
                                <div class="col-lg-9">
                                    @Html.TextBoxFor(x => x.Username, null, new { Class="form-control" })
                                </div>
                            </div>


                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label" for="val-email">Password </label>
                                <div class="col-lg-9">
                                    @Html.PasswordFor(x => x.Password, new { Class="form-control", Placeholder ="choose a safe one..." })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label">Vault Access</label>
                                <div class="col-lg-9">
                                    @Html.CheckBoxFor(x => x.PermVault, new { Class = "css-control-attribute" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label">Text Tutor Access </label>
                                <div class="col-lg-9">
                                    @Html.CheckBoxFor(x => x.PermTextTutor, new { Class = "css-control-attribute" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label">Talking Tutor Access </label>
                                <div class="col-lg-9">
                                    @Html.CheckBoxFor(x => x.PermTalkingTutor, new { Class = "css-control-attribute" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label">TwoCan Talk Access </label>
                                <div class="col-lg-9">
                                    @Html.CheckBoxFor(x => x.PermTwoCanTalk, new { Class = "css-control-attribute" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label">Remote Access </label>
                                <div class="col-lg-9">
                                    @Html.CheckBoxFor(x => x.PermSecondaryLogin, new { Class = "css-control-attribute" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label">Phrasebook Access </label>
                                <div class="col-lg-9">
                                    @Html.CheckBoxFor(x => x.PermPhrasebook, new { Class = "css-control-attribute" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label">Phrasebook Manager </label>
                                <div class="col-lg-9">
                                    @Html.CheckBoxFor(x => x.PermPhrasebook, new { Class = "css-control-attribute" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label">Enable Change Password </label>
                                <div class="col-lg-9">
                                    @Html.CheckBoxFor(x => x.EnableChangePassword, new { Class = "css-control-attribute" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label" for="val-suggestions">IP Address Whitelist </label>
                                <div class="col-lg-9">
                                    @Html.TextAreaFor(x => x.IpAddressWhitelist, 5, 15, new { placeholder = "Enter IP Address", Class="form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label" for="val-select2">Reseller </label>
                                <div class="col-lg-9">
                                    <select class="js-select2 form-control" id="val-select2" name="val-select2" style="width: 100%;" data-placeholder="Choose one..">
                                        <option value="none">None</option>
                                        <option value="op1">Option 1</option>
                                        <option value="op2">Option 2</option>
                                        <option value="op3">Option 3</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label" for="val-currency">Membership #:</label>
                                <div class="col-lg-9">
                                    @Html.TextBoxFor(x => x.MembershipNumber, null, new { Class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label" for="val-website">Organisation Name</label>
                                <div class="col-lg-9">
                                    @Html.TextBoxFor(x => x.OrganizationName, null, new { Class = "form-control"})
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label" for="val-website">Contact Forename</label>
                                <div class="col-lg-9">
                                    @Html.TextBoxFor(x => x.ContactForename, null, new { Class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label" for="val-website">Contact Surname</label>
                                <div class="col-lg-9">
                                    @Html.TextBoxFor(x => x.ContactSurname, null, new { Class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label" for="val-website">Address Line 1</label>
                                <div class="col-lg-9">
                                    @Html.TextBoxFor(x => x.AddressLine1, null, new { Class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label" for="val-website">Address Line 2</label>
                                <div class="col-lg-9">
                                    @Html.TextBoxFor(x => x.AddressLine2, null, new { Class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label" for="val-website">Town</label>
                                <div class="col-lg-9">
                                    @Html.TextBoxFor(x => x.AddressLine3, null, new { Class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label" for="val-website">Country</label>
                                <div class="col-lg-9">
                                    @Html.TextBoxFor(x => x.AddressLine4, null, new { Class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label" for="val-website">Postcode</label>
                                <div class="col-lg-9">
                                    @Html.TextBoxFor(x => x.AddressPostcode, null, new { Class = "form-control" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-lg-8 ml-auto">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<a href="/UserManagement" id="#backBtn" class="btn btn-light">Back</a>
